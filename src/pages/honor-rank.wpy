                class="rate {{item.rightRate<60?'pre_60':''}} {{(item.rightRate>=60&&item.rightRate<70)?'pre_70':''}} {{(item.rightRate>=70&&item.rightRate<85)?'pre_85':''}} {{(item.rightRate>=85)?'pre_100':''}}"
