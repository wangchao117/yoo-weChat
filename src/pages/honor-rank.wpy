            <!-- 如果是vip -->
            <image wx:if="{{item.user.memberType=='VIP' || item.user.memberType=='SCHOOL_VIP'}}" class="vipIcon" src="../static/vip-radius.png" />
          </view>
            <view class="mz">
              <view class="theName">{{item.user.name}}</view>
